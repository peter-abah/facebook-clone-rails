<div class="sidebar">
  <div class="sidebar-child">
    <%= link_to '#' do %>
      <%= image_tag current_user.profile_picture, size: '30x30', class: 'user-profile-image' %>
      <p class="sidebar-text">
        <%= current_user.name %>
      </p>
    <% end %>
  </div>

  <div class="sidebar-child">
    <%= link_to '/friends' do %>
      <%= material_icon.people.md_24.css_class('nav-icon sidebar-icon') %>
      <p class="sidebar-text">
        Friends
      </p>
    <% end %>
  </div>

  <div class="sidebar-child">
    <%= link_to '#' do %>
      <%= material_icon.chat.md_24.css_class('nav-icon sidebar-icon') %>
      <p class="sidebar-text">
        Messages
      </p>
    <% end %>
  </div>

  <div class="sidebar-child">
    <%= link_to new_post_path do %>
      <%= material_icon.create.md_24.css_class('nav-icon sidebar-icon') %>
      <p class="sidebar-text">
        Create a post
      </p>
    <% end %>
  </div>
</div>