<div class="sidebar">
  <div class="sidebar-child">
    <%= link_to current_user do %>
      <%= image_tag current_user.profile_picture, size: '30x30', class: 'user-profile-image-small' %>
      <p class="sidebar-text">
        <%= current_user.name %>
      </p>
    <% end %>
  </div>

  <div class="sidebar-child">
    <%= link_to destroy_user_session_path, method: :delete do %>
      <%= material_icon.close.md_24.css_class('nav-icon sidebar-icon logout') %>
      <p class="sidebar-text">
        Log out
      </p>
    <% end %>
  </div>

  <div class="sidebar-child">
    <%= link_to friend_requests_path do %>
      <%= material_icon.group_add.md_24.css_class('nav-icon sidebar-icon') %>
      <p class="sidebar-text">
        Friend Requests
      </p>
    <% end %>
  </div>

  <div class="sidebar-child">
    <%= link_to new_post_path do %>
      <%= material_icon.create.md_24.css_class('nav-icon sidebar-icon') %>
      <p class="sidebar-text">
        Create a post
      </p>
    <% end %>
  </div>
</div>