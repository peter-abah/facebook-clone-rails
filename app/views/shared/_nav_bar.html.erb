<nav class="main-nav">
  <div class="logo-container">
    <%= link_to root_path do %>
      <p class="logo">Odin book</p>
    <% end %>
  </div>


  <nav class="menu-links">
    <%= link_to root_path, class: 'menu-link' do %>
      <%= material_icon.home.css_class('nav-icon') %>
    <% end %>

    <%= link_to '/search', class: 'menu-link' do %>
      <%= material_icon.search.css_class('nav-icon') %>
    <% end %>

    <%= link_to '/friends', class: 'menu-link' do %>
      <%= material_icon.people.css_class('nav-icon') %>
    <% end %>

    <%= link_to current_user, class: 'menu-link' do %>
      <%= image_tag current_user.profile_picture.variant(resize_to_limit: [200, 200]), class: 'user-profile-image-small' %>
    <% end %>

    <div class="menu-link hamburger">
      <span class="hamburger-icon">
        <%= material_icon.menu.css_class('nav-icon') %>
      </span>

      <span class="hamburger-icon hidden">
        <%= material_icon.close.css_class('nav-icon') %>
      </span>
    </div>
  </nav>
</nav>