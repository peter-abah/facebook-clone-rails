<div class="search-form-container">
  <%= form_with url: '/search', method: :get, class: 'search-form' do |form| %>
    <%= form.text_field :query, placeholder: 'Search', required: true, class: 'search-bar' %>
    
    <%= button_tag type: :submit, class: 'search-button' do %>
      <%= material_icon.search.css_class('search-icon') %>
    <% end %>
  <% end %>
</div>